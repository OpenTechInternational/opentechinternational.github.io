    <div class="relative h-[40vh]">
      <img
        src="/images/oti-water-system-diagram.png"
        alt="Donate"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-[#008B8B]/60"></div>
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="text-center text-white px-4">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{metadata?.title || 'Donate'}</h1>
