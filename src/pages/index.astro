---
import Layout from '../layouts/Layout.astro';
import ActionCard from '../components/ActionCard.astro';
import { getCollection } from 'astro:content';

const allActions = await getCollection('actions');
const latestActions = allActions
	.sort((a, b) => b.data.eventDate.valueOf() - a.data.eventDate.valueOf())
	.slice(0, 2);
---

<Layout title="Open Tech International">
	<!-- Hero Section -->
	<section class="relative h-[80vh] -mt-16 flex items-center justify-center">
		<div class="absolute inset-0 z-0">
			<img
				src="/images/tz-mobile-hero.png"
				alt="Tanzanian landscape"
				class="w-full h-full object-cover"
			/>
			<div class="absolute inset-0 bg-black/40"></div>
		</div>
		<div class="relative z-10 text-center text-white px-4">
			<h1 class="text-5xl font-bold mb-6">Practical solutions, shared futures</h1>
			<div class="flex gap-4 justify-center">
				<a
					href="#mission"
					class="px-8 py-3 bg-white text-gray-900 rounded-lg hover:bg-gray-100 transition-colors"
				>
					Learn More
				</a>
				<a
					href="/initiatives/water-systems-digital-transformation#for-water-and-sanitation-utilities"
					class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700"
				>
					Get Solutions
				</a>
				<a
					href="#get-involved"
					class="px-8 py-3 border border-white text-white rounded-lg hover:bg-white/10 transition-colors"
				>
					Join Our Work
				</a>
			</div>
		</div>
	</section>

	<!-- Mission Section -->
	<section id="mission" class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-gray-900 mb-8">Our Mission</h2>
				<p class="text-lg text-gray-700 mb-12">
					Our mission is to develop and promote technology solutions that empower communities worldwide to address critical challenges.
				</p>
				<div class="grid md:grid-cols-3 gap-8">
					<div class="p-6 bg-gray-50 rounded-lg">
						<h3 class="text-xl font-semibold text-gray-900 mb-2">Open</h3>
						<p class="text-gray-600">Removing barriers to vital information</p>
					</div>
					<div class="p-6 bg-gray-50 rounded-lg">
						<h3 class="text-xl font-semibold text-gray-900 mb-2">Technology</h3>
						<p class="text-gray-600">Modern, secure, and efficient solutions</p>
					</div>
					<div class="p-6 bg-gray-50 rounded-lg">
						<h3 class="text-xl font-semibold text-gray-900 mb-2">International</h3>
						<p class="text-gray-600">Different contexts, shared human needs</p>
					</div>
				</div>
				<a
					href="/about"
					class="inline-flex items-center px-8 py-3 mt-12 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition-colors"
				>
					Learn more about us
					<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
					</svg>
				</a>
			</div>
		</div>
	</section>

	<!-- Featured Initiative -->
	<section id="featured-initiative" class="py-20 bg-gray-50">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<div class="flex flex-col md:flex-row items-center gap-8 mb-8">
					<div class="flex-1">
						<h2 class="text-3xl font-bold text-gray-900 mb-2">Featured Initiative: Wider than Water</h2>
						<h3 class="text-2xl font-semibold text-gray-700 mb-6">Water Systems Digital Transformation Initiative</h3>
						<p class="text-lg text-gray-700">
							Our flagship project focuses on digital solutions for water and sanitation utilities in sub-Saharan Africa. Through on-site work with utility teams and practical problem-solving, we're working to bridge the technology gap so that all communities have access to reliable water and sanitation services. It's not flashy, but it's vital.
						</p>
					</div>
					<div class="flex-shrink-0">
						<img
							src="/images/oti-water-logo.svg"
							alt="OTI Water Logo"
							class="w-48 h-48"
						/>
					</div>
				</div>
				<a
					href="/initiatives/water-systems-digital-transformation"
					class="inline-flex items-center px-8 py-3 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition-colors mb-12"
				>
					Learn More
					<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
					</svg>
				</a>
				<div class="space-y-4">
					<div class="flex items-center justify-between mb-6">
						<h3 class="text-xl font-semibold text-gray-900">Actions and Events</h3>
						<a
							href="/actions"
							class="inline-flex items-center text-blue-600 hover:text-blue-700 text-sm"
						>
							View all actions
							<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
							</svg>
						</a>
					</div>
					<div class="space-y-4">
						{latestActions.map(action => (
							<ActionCard
								title={action.data.title}
								description={action.data.description}
								eventDate={action.data.eventDate}
								location={action.data.location}
								type={action.data.type}
								virtual={action.data.virtual}
								registrationUrl={action.data.registrationUrl}
								slug={action.slug}
								compact={true}
							/>
						))}
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Get Involved Section -->
	<section id="get-involved" class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-gray-900 mb-8">Get Involved</h2>
				<p class="text-lg text-gray-700 mb-8">
					Support our work by donating to specific initiatives or becoming a volunteer.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a
						href="/donate"
						class="px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
					>
						Donate Now
					</a>
					<a
						href="/volunteer"
						class="px-8 py-3 bg-white text-blue-600 border border-blue-600 rounded-lg hover:bg-blue-50 transition-colors"
					>
						Volunteer
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Newsletter and Social Links -->
	<section id="newsletter" class="py-20 bg-gray-50">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto">
				<iframe 
					src="https://docs.google.com/forms/d/e/1FAIpQLSdUqpWKW_pkFiNi1u5JIv256OZDiXICraj-2HP0CJ-ZlD-vyg/viewform?embedded=true" 
					width="100%" 
					height="700" 
					frameborder="0" 
					marginheight="0" 
					marginwidth="0"
					class="rounded-lg shadow-lg"
				>
					Loadingâ€¦
				</iframe>
				<div class="flex justify-center space-x-6 mt-12">
					<a
						href="https://linkedin.com/company/opentechinternational"
						target="_blank"
						rel="noopener noreferrer"
						class="text-gray-400 hover:text-blue-600 transition-colors"
						aria-label="LinkedIn"
					>
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
							<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-.88-.06-1.601-1-1.601-1 0-1.1.781-1.1 1.601v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
						</svg>
					</a>
					<a
						href="https://twitter.com/opentechintl"
						target="_blank"
						rel="noopener noreferrer"
						class="text-gray-400 hover:text-blue-400 transition-colors"
						aria-label="Twitter"
					>
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
							<path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
						</svg>
					</a>
					<a
						href="https://github.com/opentechinternational"
						target="_blank"
						rel="noopener noreferrer"
						class="text-gray-400 hover:text-gray-900 transition-colors"
						aria-label="GitHub"
					>
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.237 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</section>
</Layout>
