---
interface Props {
  title: string;
  description: string;
  status: 'research' | 'active' | 'completed';
  image?: string;
  link?: string;
}

const { title, description, status, image, link } = Astro.props;

const statusColors = {
  research: 'bg-yellow-100 text-yellow-800',
  active: 'bg-green-100 text-green-800',
  completed: 'bg-blue-100 text-blue-800'
};
---

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
  {image && (
    <div class="aspect-video relative">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover"
      />
    </div>
  )}
  <div class="p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-semibold text-gray-900">{title}</h3>
      <span class={`px-3 py-1 rounded-full text-sm font-medium ${statusColors[status]}`}>
        {status.charAt(0).toUpperCase() + status.slice(1)}
      </span>
    </div>
    <p class="text-gray-600 mb-6">{description}</p>
    {link && (
      <a
        href={link}
        class="text-blue-600 hover:text-blue-700 font-medium inline-flex items-center"
      >
        Learn more
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    )}
  </div>
</div> 